/* pages/record/record.wxss */
page{
  height: 100%;
  width: 100%;
  /* background: linear-gradient(rgba(89,151,254, 1), rgba(255,255,255,1));  */
}
.flex{
  display: flex;
}
.contain{
  background: linear-gradient(rgba(89,151,254, 1), rgba(255,255,255,1)); 
  height: 100vh;
  flex-direction: column;
  padding: 35rpx;
}
.contain-empty{
  padding: 0rpx;
  /* height: 100vh; */
  background: #F6F6F6;
}
.stu-header{
  margin-left: 10rpx;
}
.stu-info{
  color: #fff;
  font-size: 28rpx;
}
.space-margin{
  margin-left: 30rpx;
}

/* 学校列表样式 */
.list-contain{
  background-color: #fff;
  margin-top: 20rpx;
  border-radius: 30rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 3rpx 6rpx rgba(137, 135, 135, .3);
}
.list-contain-hover{
  background-color: rgba(181, 209, 253, 0.1);
}
.list-con{
  margin-left: 20rpx;
  width: 100%;
}
.list-img{
  width: 140rpx;
  height: 140rpx;
}
.con-title{
  color: #333333;
  font-weight: 600;
  font-size: 34rpx;
  justify-content: center;
  /* letter-spacing: 1rpx; */
  align-items: center;
}
.con-label{
  margin-top: 20rpx;
}
.label-text{
  /* background-color: #F0F4FF; */
  color: #4D8FFF;
  padding: 5rpx 12rpx;
  font-weight: 600;
  font-size: 35rpx;
  letter-spacing: 2px;
  /* box-shadow: 0 3rpx 6rpx rgba(137, 135, 135, .3); */
  margin-right: 15rpx;
}
.label-text-female{
  color: #f593b8;
}
.info-common{
  font-size: 25rpx;
  color: #666;
  margin-top: 20rpx;
}
.con-info{
  margin: 0rpx 5rpx;
}
.rush{
  color: #fff;
  font-size: 30rpx;
  border-radius: 12rpx;
  padding: 0px 15rpx;
  background-color: #FF5050;
  height: 100%; 
  line-height: 50rpx;
}
.stable{
  background-color: #f593b8;
}
.protect{
  background-color: #609CFF;
}
.rush-label{
  font-size: 28rpx;
  padding: 5rpx 12rpx;
}
.title-major{
  font-weight: 500;
  font-size: 29rpx;
  color: #666;
}
/* 按钮 */
.sort-table{
  justify-content: flex-end;
}
.btn{
  display: inline-block;
  font-size: 27rpx;
  padding: 0rpx 15rpx;
  color: #fff;
  background-color: #609CFF;
  border-radius: 100rpx;
  line-height: 42rpx;
  margin: 0rpx;
}
.sort-btn{
  align-items: center;
  justify-content: flex-end;
  margin-top: 30rpx;
}
.collect-btn{
  background-color: #fff;
  color: #1187FF;
  border: 1px solid #1187FF;
}
.cancel-btn{
  background-color: #fff;
  color: #999;
  border: 1px solid #999;
}
.write-btn{
  /* border-radius: 17rpx; */
  background-color: #609CFF;
  /* font-weight: 600; */
  color: #fff;
  margin-left: 10rpx;
  border: 1px solid #609CFF;
}
.space-margin{
  margin-left: 25rpx;
}
.space-margin-li{
  margin-left: 15rpx;
  text-align: right;
  margin-right: 25rpx;
}
.label-gender{
  font-weight: bolder;
  font-size: 35rpx;
  color: red;
}
.info{
  font-size: 33rpx;
  margin-top: 20rpx;
}
.list-img{
  width: 320rpx;
  height: 320rpx;
  opacity: 0.6;
}
.empty{
  flex-direction: column;
  justify-items: center;
  align-items: center;
  justify-content: center;
  height: 80vh;
}
.empty-text{
  font-size: 36rpx;
  color: #999;
  margin-top: 35rpx;
}
